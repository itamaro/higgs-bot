<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.higgsbot.robodrive.DualJoystickView
            android:id="@+id/dualjoystickView"
            android:layout_width="450dp"
            android:layout_height="175dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dip" />

        <TableLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dip">

                <ToggleButton
                    android:id="@+id/toggleNitro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nitro_toggle"
                    android:textOn="@string/nitro_toggle"
                    android:textOff="@string/nitro_toggle"
                    android:onClick="onNitroToggled" />

        </TableLayout>

        <TextView
            android:id="@+id/txtDebugState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</LinearLayout>
